<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeefIt.LandingPage"
             BackgroundColor="Black">
    <VerticalStackLayout Padding="20">
        <Button x:Name="WorkoutButton"
                Text="Workout"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Clicked="WorkoutButton_Clicked" />
        <Label x:Name="TitleLabel"
               Text="Hello [Name]" 
               FontAttributes="Bold" 
               FontSize="24"
               TextColor="White"
               VerticalOptions="Start" 
               HorizontalOptions="Start"/>
        <BoxView Color="Transparent" VerticalOptions="FillAndExpand" />
        <Button x:Name="ProgressPicButton"
            Text="Take a Progress Pic"
            HorizontalOptions="Center"
            Clicked="ProgressPicButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>