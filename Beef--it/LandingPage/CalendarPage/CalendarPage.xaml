<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="CalendarPageInstance" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Beef__it.CalendarPage"
             Title="CalendarPage">
    <CollectionView ItemsSource="{Binding Days}">
        <!-- Grid layout with 7 columns -->
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="7"/>
        </CollectionView.ItemsLayout>

        <!-- Template for each day -->
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="LightBlue" Padding="5" Margin="2" BorderColor="Gray" HasShadow="False">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference CalendarPageInstance}, Path=BindingContext.SelectImageCommand}"
                            CommandParameter="{Binding .}" />
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:dd}'}" HorizontalOptions="Center"/>
                        <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="50" WidthRequest="50"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>